{
  "manifest_version": 3,
  "name": "Webpage to PDF",
  "version": "2.6.0",
  "description": "Extract articles using AI and save as PDF, EPUB, FB2, Markdown, or Audio (MP3)",
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "scripting",
    "downloads",
    "debugger",
    "alarms",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "config/pdf-styles.css", 
        "print/print.html", 
        "lib/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
